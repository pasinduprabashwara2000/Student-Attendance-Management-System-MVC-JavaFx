<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1052.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.mvc.fx.view.ManageCourseController">
   <children>
      <Label fx:id="titleLabel" contentDisplay="CENTER" layoutX="43.0" layoutY="22.0" prefHeight="47.0" prefWidth="913.0" text="Course Management System">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <Label fx:id="idLabel" layoutX="45.0" layoutY="88.0" prefHeight="47.0" prefWidth="177.0" stylesheets="@css/style2.css" text="Course ID : ">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label fx:id="nameLabel" layoutX="45.0" layoutY="135.0" prefHeight="47.0" prefWidth="177.0" stylesheets="@css/style2.css" text="Course Name  : ">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextField fx:id="idTxt" layoutX="212.0" layoutY="93.0" prefHeight="30.0" prefWidth="282.0" stylesheets="@css/style2.css">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="nameTxt" layoutX="212.0" layoutY="144.0" prefHeight="30.0" prefWidth="282.0" stylesheets="@css/style2.css">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <Button fx:id="saveBtn" layoutX="538.0" layoutY="91.0" mnemonicParsing="false" onAction="#saveCourse" prefHeight="31.0" prefWidth="111.0" stylesheets="@css/style2.css" text="Save">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Button>
      <Button fx:id="updateBtn" layoutX="538.0" layoutY="138.0" mnemonicParsing="false" onAction="#updateCourse" prefHeight="31.0" prefWidth="111.0" stylesheets="@css/style2.css" text="Update">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Button>
      <Button fx:id="deleteBtn" layoutX="676.0" layoutY="91.0" mnemonicParsing="false" onAction="#deleteCourse" prefHeight="31.0" prefWidth="111.0" stylesheets="@css/style2.css" text="Delete">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Button>
      <Button fx:id="resetBtn" layoutX="676.0" layoutY="138.0" mnemonicParsing="false" onAction="#clear" prefHeight="31.0" prefWidth="111.0" stylesheets="@css/style2.css" text="Reset">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Button>
      <TableView fx:id="detailsTabel" layoutX="45.0" layoutY="202.0" onMouseClicked="#searchCourse" prefHeight="453.0" prefWidth="957.0" stylesheets="@css/style2.css">
        <columns>
          <TableColumn fx:id="colId" prefWidth="215.0" text="Course ID" />
          <TableColumn fx:id="colName" prefWidth="741.0" text="Course Name" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
