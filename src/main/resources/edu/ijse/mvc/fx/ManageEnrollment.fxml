<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1052.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.mvc.fx.view.ManageEnrollmentController">
   <children>
      <!-- Title -->
      <Label fx:id="titleLabel" layoutX="38.0" layoutY="21.0" prefHeight="39.0" prefWidth="918.0" text="Enrollment Management System">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>

      <!-- Buttons -->
      <Button fx:id="saveBtn" layoutX="508.0" layoutY="86.0" mnemonicParsing="false" onAction="#saveEnrollment" prefHeight="29.0" prefWidth="89.0" stylesheets="@css/style2.css" text="Save">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="updateBtn" layoutX="618.0" layoutY="86.0" mnemonicParsing="false" onAction="#updateEnrollment" prefHeight="29.0" prefWidth="89.0" stylesheets="@css/style2.css" text="Update">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="deleteBtn" layoutX="508.0" layoutY="134.0" mnemonicParsing="false" onAction="#deleteEnrollment" prefHeight="29.0" prefWidth="89.0" stylesheets="@css/style2.css" text="Delete">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="resetBtn" layoutX="618.0" layoutY="134.0" mnemonicParsing="false" onAction="#clear" prefHeight="29.0" prefWidth="89.0" stylesheets="@css/style2.css" text="Reset">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>

      <!-- Labels -->
      <Label fx:id="regLabel" layoutX="41.0" layoutY="87.0" prefHeight="39.0" prefWidth="128.0" stylesheets="@css/style2.css" text="Reg Num : ">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label fx:id="idLabel" layoutX="41.0" layoutY="128.0" prefHeight="39.0" prefWidth="128.0" stylesheets="@css/style2.css" text="Course ID : ">
         <font>
            <Font size="15.0" />
         </font>
      </Label>

      <!-- TextFields -->
      <TextField fx:id="regTxt" layoutX="239.0" layoutY="89.0" prefHeight="30.0" prefWidth="221.0" stylesheets="@css/style2.css">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="idTxt" layoutX="239.0" layoutY="133.0" prefHeight="30.0" prefWidth="221.0" stylesheets="@css/style2.css">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>

      <!-- Table -->
      <TableView fx:id="detailsTable" layoutX="41.0" layoutY="200.0" prefHeight="513.0" prefWidth="957.0" stylesheets="@css/style2.css">
         <columns>
            <TableColumn fx:id="colRegNum" prefWidth="330.0" text="Reg_num" />
            <TableColumn fx:id="colCourseId" prefWidth="334.0" text="Course_id" />
         </columns>
      </TableView>
   </children>
</AnchorPane>
